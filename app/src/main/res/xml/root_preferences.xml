<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="paramètres">
        <CheckBoxPreference

            android:defaultValue="false"
            android:key="check_box_preference_1"
            android:title="Start on boot " />
        <ListPreference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:key="heure_debut"
            android:title="heure de début"
            app:defaultValue="18"
            app:entries="@array/heure_string"
            app:entryValues="@array/heure_string" />
        <ListPreference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:defaultValue="23"
            android:entries="@array/heure_string"
            android:entryValues="@array/heure_string"
            android:key="heure_fin"
            android:title="heure de fin" />
    </PreferenceCategory>

</PreferenceScreen>